<%- include('partials/header'); -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" name="postTitle" class="form-control" autocomplete="off">

            <label for="postBody">Post</label>
            <textarea name="postBody" id="" class="form-control" rows="5" cols="30" autocomplete="off"></textarea>
        </div>

        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>


